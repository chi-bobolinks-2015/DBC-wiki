<center>
<section class="bg-wh w-100p w-mx-md pd-sm mg-no">


<h1>Signup for DBC Wiki!</h1>

<%if @errors%>
  <%@errors.each do |error|%>
    <%=error%><br>
  <%end%>
<%end%>

<%= form_for :user, url: '/users' do |f| %>

  <%= f.text_field :username, :placeholder => " username" %><br>
  <%= f.text_field :email, :placeholder => " email" %> <br>
  <%= f.password_field :password, :placeholder => " password" %> <br>
  <%= f.password_field :password_confirmation, :placeholder => " password confirmation" %> <br>
  <%= f.submit "Submit" %>
<% end %>

</section>
</center>
